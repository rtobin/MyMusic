<% action = (band.persisted? ? band_url(band) : bands_url) %>
<% method = (band.persisted? ? :patch : :post) %>

<% if band.persisted? %>
  <%= button_to "<- Band Page", band_url(band), method: :get %>
<% end %>

<br><br>

<form action="<%= action %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <input
    type="text"
    name="band[name]"
    id="band_name"
    value="<%= band.name %>">

  <% submit_text = (band.persisted? ? 'Update' : 'Create') + ' Band Name' %>
  <input type="submit" value="<%= submit_text %>">
</form>


<br>
<% if band.persisted? %>
  <%= button_to "Add Album", new_band_album_url(band), {band_id: band.id, method: :get} %>
<% end %>
