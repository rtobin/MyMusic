<h1><%= @album.title %></h1>
band: <%= @album.band.name %>

<br><br>

<label for="trackslist">TRACKS</label>
<table id="trackslist">
  <tr>
    <th>#</th>
    <th>Song</th>
    <th>Length</th>
    <th>type</th>
  </tr>
    <% @album.tracks.each do |track| %>
      <tr>
        <td><%= track.ord %></td>
        <td><%= link_to track.title, track_url(track) %></td>
        <td>5:00</td>
        <td><%= track.bonus if track.bonus %></td>
    </tr>
    <% end %>
</table>

<h4>Links</h4>
<ul>
  <li><%= link_to "add new track", new_album_track_url(@album) %></li>
  <li><%= link_to "Edit Album", edit_album_url(@album) %></li>
  <li><%= link_to "Delete Album!", album_url(@album), method: :delete %></li>
  <li><%= link_to @album.band.name, band_url(@album.band) %></li>
</ul>
